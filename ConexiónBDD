    private static Connection con;
    private static Statement s;
    private static DatosJSon dJSon;
    private static int numEst = 3;

    private static final String driver = "com.mysql.cj.jdbc.Driver";//com.mysql.jdbc.Driver";
    private static final String user = "root";
    private static final String pass = "alumnoalumno";
    private static final String url = "jdbc:mysql://localhost:33306/valenbici_db?useSSL=false&serverTimezone=UTC";
    // Función que va a conectarse a mi B

    /**
     * Creates new form ConexionBDD
     */
    public ConexionBDD() {
        initComponents();
        dJSon = new DatosJSon(numEst);
        jTextFieldNumEst.setText("" + numEst);

        jButtonConectarBDD.addActionListener(evt -> jButtonConectarBDDActionPerformed(evt));
        jButtonDatosEstaciones.addActionListener(evt -> jButtonDatosEstacionesActionPerformed(evt));
        jButtonAddBDD.addActionListener(evt -> jButtonAddBDDActionPerformed(evt));
        jButtonCerrarCxBDD.addActionListener(evt -> jButtonCerrarCxBDDActionPerformed(evt));

    }

    private void jButtonConectarBDDActionPerformed(java.awt.event.ActionEvent evt) {
        conector();
        jButtonAddBDD.setEnabled(true);
    }

    private void jButtonDatosEstacionesActionPerformed(java.awt.event.ActionEvent evt) {
        dJSon.mostrarDatos(numEst);
        jButtonDatosEstaciones.setText("Datos de estaciones:");
        jTextArea1.setText(dJSon.getDatos());
        conector();
    }

    private void jButtonAddBDDActionPerformed(java.awt.event.ActionEvent evt) {
        dJSon.mostrarDatos(numEst);
        jButtonDatosEstaciones.setText("Datos de estaciones:");
        jTextArea1.setText(dJSon.getDatos());
        conector();
    }

    private void jButtonCerrarCxBDDMouseClicked(java.awt.event.MouseEvent evt) {
        try {
            // TODO Añade aquí el código para cerrar la conexión con la Base de Datos
            if (s != null && !s.isClosed()) {
                s.close();
            }

            if (con != null && !con.isClosed()) {
                con.close();
            }

            jLabelEstConexBDD.setText("Conexión cerrada correctamente.");

        } catch (SQLException ex) {
            Logger.getLogger(ConexionBDD.class.getName()).log(Level.SEVERE, null, ex);
        }
        conector();
    }

    private void jButtonCerrarCxBDDActionPerformed(java.awt.event.ActionEvent evt) {
        try {
            if (s != null && !s.isClosed()) {
                s.close();
            }
            if (con != null && !con.isClosed()) {
                con.close();
            }
            jLabelEstConexBDD.setText("Conexión cerrada correctamente.");
        } catch (SQLException ex) {
            Logger.getLogger(ConexionBDD.class.getName()).log(Level.SEVERE, null, ex);
        }
    }

    // Declaramos los datos de conexion a la bd
    public void conector() {
        // Reseteamos a null la conexion a la bd
        con = null;
        try {
            Class.forName(driver);

            // Nos conectamos a la bd
            con = (Connection) DriverManager.getConnection(url, user, pass);
            s = con.createStatement();

            // Si la conexion fue exitosa mostramos un mensaje de conexion exitosa
            if (con != null) {
                jLabelEstConexBDD.setText("Conexion establecida");

            }
        } // Si la conexion NO fue exitosa mostramos un mensaje de error
        catch (ClassNotFoundException | SQLException e) {
            jLabelEstConexBDD.setText("Error de conexion" + e);
        }

        // Añade aquí el código para establecer la conexión con la base de datos
    }

